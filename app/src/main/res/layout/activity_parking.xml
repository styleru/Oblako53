<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/background">
    
    <View
        android:id="@+id/parking_activity_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="22dp"
        android:layout_marginTop="27dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/close_cross_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/parking_screen_string1"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="232dp"
        android:layout_marginTop="101dp"
        android:text="@string/parking_string"
        android:textColor="@color/textColour"
        android:textSize="29sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/parking_screen_string2"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="54dp"
        android:textSize="14sp"
        android:textColor="@color/grayTextColor"
        android:text="@string/name_surname_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_string1"/>

    <EditText
        android:id="@+id/parking_screen_name_edit"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textSize="19sp"
        android:textColor="@color/textColour"
        android:textColorHint="@color/textColour"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_string2"/>

    <View
        android:id="@+id/parking_screen_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:background="@color/textColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_name_edit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/parking_screen_string3"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@color/grayTextColor"
        android:text="@string/cur_number_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_line1"/>

    <EditText
        android:id="@+id/parking_screen_cur_edit"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:maxLength="9"
        android:singleLine="true"
        android:textColor="@color/textColour"
        android:textColorHint="@color/textColour"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_string3"/>

    <View
        android:id="@+id/parking_screen_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:background="@color/textColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_cur_edit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/parking_screen_string4"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="@color/grayTextColor"
        android:text="@string/mail_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_line2"/>

    <EditText
        android:id="@+id/parking_screen_phone_edit"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:inputType="phone"
        android:textColor="@color/textColour"
        android:textColorHint="@color/textColour"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_string4"/>

    <View
        android:id="@+id/parking_screen_line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="30dp"
        android:background="@color/textColour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_phone_edit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/parking_order_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="29dp"
        android:text="@string/order_parking_string"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:textColor="@color/textColour"
        android:layout_marginEnd="29dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/red_button_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_screen_line3"/>

    <TextView
        android:id="@+id/success_parking"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="23dp"
        android:textColor="@color/textColour"
        android:textSize="14sp"
        android:gravity="center"
        android:text="@string/parking_order_complete_string"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parking_order_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="@string/created_by_string"
        android:textColor="@color/textColour"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>